<UserControl x:Class="WpfApplication1.Ui.TableCustomerMeter.ListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:waterExcelConsumption="clr-namespace:WpfApplication1.Ui.WaterConsumptionList"
             xmlns:utility="clr-namespace:WpfApplication1.Utility"
             xmlns:controls="clr-namespace:WpfApplication1.Controls"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <!--<DataTemplate DataType="{x:Type waterExcelConsumption:EditedViewModel}">
            <waterExcelConsumption:EditedView />
        </DataTemplate>-->
    </UserControl.Resources>
        <Border BorderThickness="1 1 1 1" BorderBrush="LightGray" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ToolBar Grid.Row="0" >
                    <Button Command="{Binding AddRowCmd}" Content="Add"/>
                    <Button Command="{Binding OpenRowCmd}" Content="Open"/>
                    <Button Command="{Binding RemoveRowCmd}" Content="Delete" ToolTipService.ShowOnDisabled="True" ToolTip="Disabled for rows with a switched on 'Archived' option."/>
                    <Separator/>
                    <Button Command="{Binding CloneCmd}" Content="Clone"/>
                    <Separator/>
                </ToolBar>
                <controls:FilteredDataGridCtrl  x:Name="DataGrid1" 
                    Grid.Row="1" 
                    ItemsSource="{Binding List}" 
                    SelectedItem="{Binding SelectedRow}"      
                    AutoGenerateColumns="False" 
                    IsReadOnly="True"
                    utility:SelectingItemAttachedProperty.SelectingItem="{Binding SelectedRow}" 
                    BorderThickness="0 1"
                    >
                    <DataGrid.InputBindings>
                        <MouseBinding Gesture="LeftDoubleClick" Command="{Binding OpenRowCmd}"/>
                    </DataGrid.InputBindings>
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Object ID" Width="150" IsReadOnly="True" Binding="{Binding ObjModel.ObjId}"/>
                        <DataGridTextColumn Header="Label" Width="150" IsReadOnly="True" Binding="{Binding Label}"/>
                        <DataGridTextColumn Header="Associated Element" Width="150" IsReadOnly="True" Binding="{Binding AssociatedElementName}"/>
                        <DataGridTextColumn Header="Demand Base" Width="200" IsReadOnly="True" Binding="{Binding DemandBase}"/>
                        <DataGridTextColumn Header="Demand Pattern" Width="200" IsReadOnly="True" Binding="{Binding DemandPatternModel.Name}"/>
                        <DataGridCheckBoxColumn Header="Active" Width="100" IsReadOnly="True" Binding="{Binding Path=IsActive, Mode=OneWay}"/>
                        <DataGridTextColumn Header="Zone" Width="150" IsReadOnly="True" Binding="{Binding Zone.Name}"/>
                        <DataGridTextColumn Header="Demand Base (Settings)" Width="200" IsReadOnly="True" Binding="{Binding DemandBaseDmSet}"/>
                        <DataGridTextColumn Header="Demand Pattern (Settings)" Width="200" IsReadOnly="True" Binding="{Binding DemandPatternNameDmSet}"/>
                        <DataGridCheckBoxColumn Header="Excluded (Settings)" Width="150" IsReadOnly="True" Binding="{Binding IsExcluded}"/>
                    </DataGrid.Columns>
                </controls:FilteredDataGridCtrl>
                <StatusBar Grid.Row="2">
                    <StatusBarItem Content="{Binding RowsQty}"/>
                    <StatusBarItem Content="rows"/>
                </StatusBar>
            </Grid>
        </Border>
</UserControl>
